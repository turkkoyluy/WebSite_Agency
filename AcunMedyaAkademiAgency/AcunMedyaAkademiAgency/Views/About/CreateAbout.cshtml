@model AcunMedyaAkademiAgency.Entities.About
@{
    ViewBag.Title = "CreateAbout";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Hakkında Ekleme Sayfası</h4>
            <p class="card-description">Hakkında ekleme işlemlerini buradan yapabilirsiniz.</p>
            <form class="forms-sample" method="post">
                <div class="form-group">
                    <label for="exampleInputName1">Hakkımda Başlığı</label>
                    <input type="text"
                           class="form-control"
                           id="exampleInputName1"
                           placeholder="hakkında Adı"
                           name="Title" />
                </div>
                <div class="form-group">
                    <label for="exampleInputName1">Hakkımda Açıklaması</label>
                    <textarea rows="4" class="form-control" name="Description"></textarea>
                </div>
                <div class="form-group">
                    <label for="exampleInputName2">Resim Yolu</label>
                    <input type="text"
                           class="form-control"
                           id="exampleInputName1"
                           placeholder="Hakkında Resim Yolu"
                           name="ImageUrl" />
                </div>
                <button type="submit" class="btn btn-primary mr-2">Kaydet</button>
                <button type="reset" class="btn btn-light">Vazgeç</button>
            </form>
        </div>
    </div>
</div>
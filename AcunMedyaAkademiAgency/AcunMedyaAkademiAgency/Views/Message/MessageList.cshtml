@model List<AcunMedyaAkademiAgency.Entities.Message>
@{
    ViewBag.Title = "MessageList";
    Layout = "~/Views/AdminLayout/Index.cshtml";
    var count = 0;
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Mesajlar Sayfası</h4>
            <p class="card-description">
                Mesajlar ile ilgili işlemleri buradan yapabilirsiniz
            </p>
            <form method="get">
                <div class="form-group">
                    <div class="input-group">
                        <input type="text" class="form-control" placeholder="Aranacak Kelime" aria-label="Aranacak Kelime" aria-describedby="basic-addon2" name="searchText" />
                        <div class="input-group-append">
                            <button class="btn btn-sm btn-primary" type="button"> Arama</button>
                        </div>
                    </div>
                </div>
            </form>
            <div class="table-responsive">
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>No</th>
                            <th>Adı Soyadı</th>
                            <th>Mail Adresi</th>
                            <th>Mesaj Başlığı</th>
                            <th>Okundu Bilgisi</th>
                            <th>Detaylar</th>
                            <th>Sil</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@count</td>
                                <td>@item.NameSurname</td>
                                <td>@item.Email</td>
                                <td>@item.Title</td>
                                <td>@item.IsRead</td>
                                <td><a class="btn btn-success" href="/Message/MessageDetail/@item.MessageId"><i class="fa fa-clipboard"></i>Detaylar</a></td>
                                <td><a class="btn btn-danger" href="/Message/DeleteMessage/@item.MessageId"><i class="fa fa-trash"></i>Sil</a></td>
                            </tr>
                            count++;
                        }
                    </tbody>
                </table>
                <br />
            </div>
        </div>
    </div>
</div>

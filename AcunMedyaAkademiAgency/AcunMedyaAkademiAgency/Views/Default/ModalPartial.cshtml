@model List<AcunMedyaAkademiAgency.Entities.ProjectDetails>
@foreach (var item in Model)
{
    <div class="portfolio-modal modal fade" id="portfolioModal2-@item.ProjectId" tabindex="-1" role="dialog" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="close-modal" data-bs-dismiss="modal"><img src="/Templates/agency/assets/img/close-icon.svg" alt="Close modal" /></div>
                <div class="container">
                    <div class="row justify-content-center">
                        <div class="col-lg-8">
                            <div class="modal-body">
                                <!-- Project details-->
                                <h2 class="text-uppercase">@item.Projects.Title</h2>
                               <p class="item-intro text-muted"></p>
                                <img class="img-fluid d-block mx-auto" src="@item.Projects.ImageUrl" alt="..." />
                                <p>@item.Description</p>
                                <ul class="list-inline">

                                    <li>
                                        <strong>Kategori:</strong>
                                        @item.Projects.Category.CategoryName
                                    </li>
                                </ul>
                                <button class="btn btn-primary btn-xl text-uppercase" data-bs-dismiss="modal" type="button">
                                    <i class="fas fa-times me-1"></i>
                                    Close Project
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
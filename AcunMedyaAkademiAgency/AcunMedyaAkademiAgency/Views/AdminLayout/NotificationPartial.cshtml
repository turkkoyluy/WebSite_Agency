@model List<AcunMedyaAkademiAgency.Entities.Notification>
<li class="nav-item dropdown">
    <a class="nav-link count-indicator dropdown-toggle" id="notificationDropdown" href="#" data-toggle="dropdown">
        <i class="mdi mdi-bell-outline"></i>
        <span class="count count-varient1">@Model.Count</span> <!-- Dinamik olarak bildirim sayısı -->
    </a>
    <div class="dropdown-menu navbar-dropdown navbar-dropdown-large preview-list" aria-labelledby="notificationDropdown">
        <h6 class="p-3 mb-0">Bildirimler</h6>
        @foreach (var item in Model)
        {
            <a class="dropdown-item preview-item">
                <div class="preview-thumbnail">
                    <img src="@item.ImageUrl" alt="" class="profile-pic" />
                </div>
                <div class="preview-item-content">
                    <p class="mb-0">
                        @item.NameSurname
                        <span class="text-small text-muted">@item.Description</span>
                    </p>
                </div>
            </a>
        }
        <div class="dropdown-divider"></div>
        <p class="p-3 mb-0">View all activities</p>
    </div>
</li>

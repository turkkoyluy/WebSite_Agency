@model AcunMedyaAkademiAgency.Entities.Team
@{
    ViewBag.Title = "CreateTeam";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Personel Ekleme Sayfası</h4>
            <p class="card-description">Personel ekleme işlemlerini buradan yapabilirsiniz.</p>
            <form class="forms-sample" method="post">
                <div class="form-group">
                    <label for="exampleInputName1">Personel Adı</label>
                    <input type="text"
                           class="form-control"
                           id="exampleInputName1"
                           placeholder="Personel Adı"
                           name="NameSurname" />
                </div>
                <div class="form-group">
                    <label for="exampleInputName2">Personel Resim Yolu</label>
                    <input type="text"
                           class="form-control"
                           id="exampleInputName1"
                           placeholder="Personel Resim Yolu"
                           name="ImageUrl" />
                </div>
                <button type="submit" class="btn btn-primary mr-2">Kaydet</button>
                <button type="reset" class="btn btn-light">Vazgeç</button>
            </form>
        </div>
    </div>
</div>

